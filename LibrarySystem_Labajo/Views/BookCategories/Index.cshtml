@model IEnumerable<LibrarySystem_Labajo.Models.BookCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout_Users.cshtml";
}
<h1 class="text-white text-center">Category</h1>
<div class="text-end margin-0">
    <p>
        <button class="btn btn-warning px-2 py-0"> <a class="text-black" style="text-decoration:none;"<a asp-action="Create" style="text-decoration:none">Add Category</a></button>

        <button class="btn btn-warning px-2 py-0"> <a class="text-black" style="text-decoration:none;"<a asp-controller="Books" asp-action="Index" style="text-decoration:none">Books</a></button>

        @* <a class="btn btn-outer-warning" asp-action="Create">Create New</a> *@
    </p>
<table class="table text-white">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.categoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr  class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.categoryId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoryName)
            </td>

            <td>
                <button class="btn btn-success px-2 py-0"><a asp-action="Edit" asp-route-id="@item.categoryId" style="text-decoration:none;" class="text-white">Edit</a></button>
                <button class="btn btn-info px-2 py-0"><a asp-action="Details" asp-route-id="@item.categoryId" style="text-decoration:none;" class="text-dark">Details</a></button>
                <button class="btn btn-danger  px-2 py-0"><a asp-action="Delete" asp-route-id="@item.categoryId" style="text-decoration:none;" class="text-white">Delete</a></button>
            
               @*  <a asp-action="Edit" asp-route-id="@item.categoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.categoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.categoryId">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
</div>