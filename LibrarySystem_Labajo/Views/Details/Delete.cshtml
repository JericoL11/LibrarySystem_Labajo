@model LibrarySystem_Labajo.Models.Details

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout_Users.cshtml";
}
<div class="text-white">

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Details</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" > </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FK_books_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FK_books_id.bookName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FK_record_id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FK_record_id.record_id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.return_date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.return_date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="details_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <button class="btn btn-warning px-2 py-0"> <a asp-action="Index" style="text-decoration:none;" class="text-black px-2">Back</a></button>

    </form>
</div>
</div>